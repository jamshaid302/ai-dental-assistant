generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  patients Patient[]
}

model Patient {
  id           String   @id @default(uuid())
  name         String
  email        String
  phone        String?
  dob          DateTime
  medicalNotes String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  chats Chat[]

  @@index([userId])
  @@index([createdAt])
}

model Chat {
  id        String   @id @default(uuid())
  role      String
  message   String
  createdAt DateTime @default(now())

  patientId String
  patient   Patient @relation(fields: [patientId], references: [id])

  @@index([patientId])
  @@index([createdAt])
}
